function _init()
	screen=128
	
	_upd=update_main
	_drw=draw_main
	
	p1={
		x=screen/2,
		y=screen/2,
		dx=0,
		dy=0,
		isgrounded=false,
		jumpspd=-4
	}
	
	g=0.4
end

function _update()
	_upd()
end

function _draw()
	_drw()
end
