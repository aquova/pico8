-- player functions

function move_player()
	local startx=p1.x
	p1.dx=0
	
	-- move left/right
	if btn(â¬…ï¸) then
		p1.dx=-2
	elseif btn(â¡ï¸) then
		p1.dx=2
	end
	
	p1.x+=p1.dx
	
	-- check for wall
	local xoffset=0
	if p1.dx>0 then xoffset=7 end
	
	-- check flag of bottom center of player
	local v=mget((p1.x+xoffset)/8,(p1.y+7)/8)
	if fget(v,0) then
		p1.x=startx
	end
	
	-- jump
	if (btnp(â¬†ï¸) or btnp(â)) and p1.isgrounded then
		p1.dy=p1.jumpspd
	end
	
	-- move y position by dy and by gravity
	p1.dy+=g
	p1.y+=p1.dy

	-- check for floor
	v=mget((p1.x+4)/8,(p1.y+8)/8)
	p1.isgrounded=false
	
	if p1.dy>=0 then
		if fget(v,0) then
			p1.y=flr(p1.y/8)*8
			p1.dy=0
			p1.isgrounded=true
		end
	end
	
	-- check for ceiling
	v=mget((p1.x+4)/8,p1.y/8)
	if p1.dy<=0 then
		if fget(v,0) then
			p1.dy=0
			p1.y=flr((p1.y+8)/8)*8
		end
	end
end
