-- player functions

function shoot()
	local f={}
	f.x=drac.x
	f.y=drac.y+3
	local spd=1
	if drac.direc=="d" then
		f.vx=0
		f.vy=spd
	elseif drac.direc=="u" then
		f.vx=0
		f.vy=-spd
	elseif drac.direc=="l" then
		f.vx=-spd
		f.vy=0
	elseif drac.direc=="r" then
		f.vx=spd
		f.vy=0
	end
	
	f.update=function(this)
		f.x+=f.vx
		f.y+=f.vy
		-- probably need to be modifed for width
		if not onscreen(f.x,f.y) then
			del(fireballs,f)
		end
	end
	
	f.draw=function(this)
		spr(16,f.x,f.y)
	end
	
	add(fireballs,f)
end
